@model DigitalWallet_COPPI_.Models.Profile.ProfileHeaderBarModel
<div class="profile-banner-large bg-img" data-bg="@Model.CoverPhoto">
</div>
<!-- profile banner area end -->
<!-- profile menu area start -->
<div class="profile-menu-area secondary-navigation-style bg-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-3">
                <div class="profile-picture-box">
                    <figure class="profile-picture">
                        <a href="profile.html">
                            <img src="@Model.ProfilePhoto" alt="profile picture">
                        </a>
                    </figure>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 offset-lg-1">
                <div class="profile-menu-wrapper">
                    <div class="main-menu-inner header-top-navigation">
                        <nav>
                            <ul class="main-menu">
                                <li class="active"><a asp-controller="Profile" asp-action="profile">timeline</a></li>
                                <li><a asp-controller="Profile" asp-action="About">about</a></li>
                                <li><a asp-controller="Profile" asp-action="Friends">friends</a></li>
                                <li><a asp-controller="Profile" asp-action="Friends" >Visiting Card</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-3 d-none d-md-block">
                <div class="profile-edit-panel">
                    <a asp-controller="Profile" asp-action="EditProfile" class="edit-btn">edit profile</a>
                </div>
            </div>
        </div>
    </div>
</div>
