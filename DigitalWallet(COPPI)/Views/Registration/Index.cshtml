@model LoginRegitrationViewModel
@{ 
    Layout = "_Layout";
}
<div class="main-wrapper pb-0 mb-0">
    <div class="timeline-wrapper">
        <div class="timeline-header">
            <div class="container-fluid p-0">
                <div class="row no-gutters align-items-center">
                    <div class="col-lg-6">
                        <div class="timeline-logo-area d-flex align-items-center">
                            <div class="timeline-logo">
                                <a asp-controller="Home" asp-action="Index">
                                    <img src="~/Adda/images/Logo.jpg" alt="SmS" style="width:100px;height:70px;">
                                </a>
                            </div>
                            <div class="timeline-tagline">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="login-area">
                            <div class="row align-items-center">
                                <div class="col-12 col-sm">
                                    <input asp-for="Login.Email" placeholder="Email" class="single-field">
                                </div>
                                <div class="col-12 col-sm">
                                    <input asp-for="Login.Password" placeholder="Password" class="single-field">
                                </div>
                                <div class="col-12 col-sm-auto">
                                    <button class="login-btn">Login</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="timeline-page-wrapper">
            <div class="container-fluid p-0">
                <div class="row no-gutters">
                    <div class="col-lg-6 order-2 order-lg-1">
                        <div class="timeline-bg-content bg-img" data-bg="~/Adda/images/timeline/Shuvo_Sms.jpg">
                        </div>
                    </div>
                    <div class="col-lg-6 order-1 order-lg-2 d-flex align-items-center justify-content-center">
                        <div class="signup-form-wrapper">
                            <h1 class="create-acc text-center">Create An Account</h1>
                            <div class="signup-inner text-center">
                                <h3 class="title">Wellcome to Shuvo</h3>
                                <form class="signup-inner--form">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input asp-for="Registration.Name" class="single-field" placeholder="Name">
                                        </div>
                                        <div class="col-12">
                                            <input asp-for="Registration.Email" class="single-field" placeholder="Email">
                                        </div>
                                        <div class="col-12">
                                            <input asp-for="Registration.Password" class="single-field" placeholder="Password">
                                        </div>
                                        <div class="col-12">
                                            <input asp-for="Registration.ConfirmPassword" class="single-field" placeholder="Re-Enter Password">
                                        </div>
                                        <div class="col-md-6">
                                            <select class="nice-select" asp-for="Registration.Gender">
                                                <option value="trending">Gender</option>
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                            </select>
                                        </div>
                                        <div class="col-12">
                                            <input type="number" class="single-field" placeholder="Phone Number">
                                        </div>
                                        <div class="col-12">
                                            <button class="submit-btn">Create Account</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
